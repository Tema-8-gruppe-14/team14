---
import Button from "../components/Button.astro";

const { title, description, hourstitle, hours, href, button } = Astro.props;
---

<article>
    <h2>{title}</h2>
    <p>{description}</p>
    <h3>{hourstitle}</h3>
    <p set:html={hours}></p>
    <a href={`tel:70 90 90 80`} class="phone-link">
