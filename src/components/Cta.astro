---
const { text, src, alt = "", href = "#" } = Astro.props;
---

<a href={href} class="cta">
    <img src={src} alt={alt} class="cta-icon">
    <span>{text}</span>
</a>

<style>

a {
    font-size: 0.8rem;
}
.cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--blue);
    color: var(--white);
    font-weight: 600;
    text-decoration: none;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s;
}

.cta-icon {
    display: inline-block;
    width: 2rem;
    height: 2rem;
}

.cta:hover {
    transition: all 0.3s;
    background: var(--bluehover);
}

@media (min-width: 768px) {
    .cta-icon {
    width: 3rem;
    height: 3rem;
}

a {
    font-size: 1.2rem;
}
}
</style>