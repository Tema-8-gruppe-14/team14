---
const { text, src, alt = "" } = Astro.props;
---

<button>
    <img src={src} alt={alt} class="cta-icon">
    <span>{text}</span>
</button>

<style>
button {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--blue);
    color: var(--white);
    font-weight: 600;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s;
}

.cta-icon {
    display: inline-block;
    width: 3rem;
    height: 3rem;
    overflow: visible;
}

button:hover {
    transition: all 0.3s;
    background: var(--bluehover);
}
</style>