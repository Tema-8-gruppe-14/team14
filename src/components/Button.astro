---
const { text, link } = Astro.props;
---
<a href="{link}">{text}</a>

<style>
    a {
        display: inline-block;
        text-decoration: none;
        padding: 0.8rem 1.3rem 1.1rem;
        background: var(--blue);
        color: var(--white);
        font-weight: 400;
        text-align: center;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: all 0.3s;
        max-width: 150px;
    }

    a:hover {
        transition: all 0.3s;
        background: var(--bluehover);
    }
</style>